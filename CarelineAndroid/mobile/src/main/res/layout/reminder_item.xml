<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_reminder_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.repsly.careline.MainActivity"
    >

    <TextView
        android:id="@+id/tv_name_of_medicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Lupocet"
        android:textSize="40sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="2 pills"
        android:textSize="20dp"/>

    <ImageButton
        android:id="@+id/btn_swallow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@mipmap/icon_checked"/>

</LinearLayout>
